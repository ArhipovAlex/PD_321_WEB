@model Academy.Models.Direction

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Direction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.direction_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.direction_name)
        </dd>
        <dt class = "col-sm-2">
            Количество групп:
            @* @Html.Display("Количество групп:") *@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Groups!.Count)
        </dd>        
        <dt class = "col-sm-2">
            Количество студентов:
        </dt>
        <dd class = "col-sm-10">
@*             @Html.DisplayFor(
                model => model.Groups!.Sum(g=>g.Students!.Count)) *@
            @Model.Groups!.Sum(g => g.Students!.Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.direction_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@if (Model.Disciplines!=null)
{
    <div>
        <h3>В направлении изучаются следующие дисциплины (@Model.Disciplines.Count())</h3>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Дисциплина</th>
                <th>Кол-во занятий</th>
            </tr>
            @foreach (DirectionsDisciplinesRelations d in Model.Disciplines)
            {
                <tr>
                    <td>@d.Discipline.discipline_id</td>
                    <td>@d.Discipline.discipline_name</td>
                    <td>@d.Discipline.number_of_lessons</td>
                </tr>
            }
        </table>
    </div>
}