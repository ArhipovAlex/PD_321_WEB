@model Academy.Models.Teacher

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div style="display:flex;">
    <div style="flex: 1;">
        <h4>Teacher</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.last_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.last_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.first_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.first_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.middle_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.middle_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.birth_date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.birth_date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.work_since)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.work_since)
            </dd>
        </dl>
    </div>
    <div style="flex: 1;">
        @* <img style='width:80px; height:60px; src="data:image/jpeg;base64,@(Convert.ToBase64String(model => model.photo))"  /> пример кода загрузки картинки из БД, хранящейся в Byte64*@
        @*
            https://learn.microsoft.com/ru-ru/aspnet/web-pages/overview/ui-layouts-and-themes/9-working-with-images
            https://www.cyberforum.ru/asp-net/thread1931790.html
            https://ru.stackoverflow.com/questions/739916/%D0%93%D0%B4%D0%B5-%D0%BD%D0%B5%D0%BE%D0%B1%D1%85%D0%BE%D0%B4%D0%B8%D0%BC%D0%BE-%D1%85%D1%80%D0%B0%D0%BD%D0%B8%D1%82%D1%8C-%D0%B8%D0%B7%D0%BE%D0%B1%D1%80%D0%B0%D0%B6%D0%B5%D0%BD%D0%B8%D1%8F-%D0%B2-asp-net-%D0%BF%D1%80%D0%B8%D0%BB%D0%BE%D0%B6%D0%B5%D0%BD%D0%B8%D1%8F%D1%85
        *@
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.teacher_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@if(Model.Disciplines !=null)
{
    <div>
        <h3>Преподаватель может вести следующие дисциплины (@Model.Disciplines.Count())</h3>
        <table class="table">
            <tr>
                    <th>ID</th>
                    <th>Дисциплина</th>
                    <th>Кол-во занятий</th>
			</tr>
            @foreach(TeachersDisciplinesRelations d in Model.Disciplines)
            {
                <tr>
                    <td>@d.Discipline.discipline_id</td>
                    <td>@d.Discipline.discipline_name</td>
                    <td>@d.Discipline.number_of_lessons</td>
                </tr>
            }
        </table>
    </div>
}